<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FFFDFD">
    <TextView
        android:id="@+id/tv_home"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00A681E7"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text=" SAFE PULSE"
        android:textColor="#E66136"
        android:textSize="28sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="303dp"
        android:layout_height="47dp"

        android:layout_marginBottom="50dp"
        android:background="@drawable/kol"
        android:gravity="center"
        android:padding="10dp"
        android:text="Fall detection is inactive."
        android:textColor="#00FFFFFF"
        android:textSize="16sp" />






    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:backgroundTint="#0070F2EF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/hhh"/>

            <Button
                android:id="@+id/btn_fall_detection"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#8FF00505"
                android:text="Start Fall Detection"
                android:background="@color/colorDivider"
                android:textColor="@color/background_color"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:backgroundTint="#0070F2EF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/acd"/>


            <Button
                android:id="@+id/btn_add_contacts"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Emergency Contacts"
                android:background="@color/background_color"
                android:textColor="@color/background_color"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:backgroundTint="#11F7FAF9"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/fff"/>

            <Button
                android:id="@+id/btn_set_safe_zone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Geo-Fence"
                android:background="@android:color/white"
                android:textColor="@color/background_color"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_sos_flashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start SOS Flashlight"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />


    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:backgroundTint="#00A681E7"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_account"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Account"

            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/btn_feedback"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="About"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:layout_marginTop="70dp"/>
    <!-- BLE Toggle Switch for Crowd-Sourced Assistance -->

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:backgroundTint="#00A681E7"
        android:layout_marginTop="20dp">


    </LinearLayout>
</LinearLayout>


