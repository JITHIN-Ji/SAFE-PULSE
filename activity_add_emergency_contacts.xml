<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F7F9FA"> <!-- Black Background -->

    <EditText
        android:id="@+id/et_contact_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="Enter Contact 1"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#090909"
        android:textColorHint="#0B0A0A"
        android:backgroundTint="#E00A22"/>

    <EditText
        android:id="@+id/et_contact_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="Enter Contact 2 (Optional)"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#070707"
        android:textColorHint="#0D0C0C"
        android:backgroundTint="#E00A22"/>

    <EditText
        android:id="@+id/et_contact_3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="Enter Contact 3 (Optional)"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#0D0C0C"
        android:textColorHint="#0D0D0D"
        android:backgroundTint="#E00A22"/>

    <EditText
        android:id="@+id/et_contact_4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="Enter Contact 4 (Optional)"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#0B0A0A"
        android:textColorHint="#0B0A0A"
        android:backgroundTint="#E00A22"/>

    <EditText
        android:id="@+id/et_contact_5"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="Enter Contact 5 (Optional)"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#0D0C0C"
        android:textColorHint="#0F0E0E"
        android:backgroundTint="#E00A22"/>

    <Button
        android:id="@+id/btn_save_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Contacts"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E65100"
        android:layout_marginTop="20dp"/>
</LinearLayout>
